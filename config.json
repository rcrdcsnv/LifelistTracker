{
  "database": {
    "path": "lifelists.db"
  },
  "ui": {
    "theme": "System",
    "color_theme": "blue",
    "window_size": {
      "width": 1200,
      "height": 800
    }
  },
  "export": {
    "default_directory": "",
    "include_photos": true
  },
  "map": {
    "default_zoom": 5,
    "marker_size": {
      "width": 100,
      "height": 100
    }
  },
  "lifelist_types": {
    "templates": {
      "Wildlife": {
        "tiers": [
          "wild",
          "heard",
          "captive"
        ],
        "entry_term": "species",
        "observation_term": "sighting",
        "default_fields": [
          {
            "name": "Scientific Name",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Family",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Weather",
            "type": "text",
            "required": 0,
            "options": null
          }
        ]
      },
      "Plants": {
        "tiers": [
          "wild",
          "garden",
          "greenhouse"
        ],
        "entry_term": "species",
        "observation_term": "sighting",
        "default_fields": [
          {
            "name": "Scientific Name",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Family",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Habitat",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Flowering Season",
            "type": "text",
            "required": 0,
            "options": null
          }
        ]
      },
      "Books": {
        "tiers": [
          "read",
          "currently reading",
          "want to read",
          "abandoned"
        ],
        "entry_term": "book",
        "observation_term": "reading",
        "default_fields": [
          {
            "name": "Author",
            "type": "text",
            "required": 1,
            "options": null
          },
          {
            "name": "Publisher",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Year",
            "type": "number",
            "required": 0,
            "options": null
          },
          {
            "name": "Genre",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Rating",
            "type": "rating",
            "required": 0,
            "options": {
              "max": 5
            }
          }
        ]
      },
      "Travel": {
        "tiers": [
          "visited",
          "stayed overnight",
          "want to visit"
        ],
        "entry_term": "place",
        "observation_term": "visit",
        "default_fields": [
          {
            "name": "Country",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "City",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Duration",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Rating",
            "type": "rating",
            "required": 0,
            "options": {
              "max": 5
            }
          }
        ]
      },
      "Astronomy": {
        "tiers": [
          "visual",
          "imaged",
          "sketched",
          "want to observe"
        ],
        "entry_term": "object",
        "observation_term": "observation",
        "default_fields": [
          {
            "name": "Object Type",
            "type": "choice",
            "required": 1,
            "options": {
              "options": [
                {"label": "Star", "value": "star"},
                {"label": "Planet", "value": "planet"},
                {"label": "Galaxy", "value": "galaxy"},
                {"label": "Nebula", "value": "nebula"},
                {"label": "Cluster", "value": "cluster"}
              ]
            }
          },
          {
            "name": "Catalog Number",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Right Ascension",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Declination",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Magnitude",
            "type": "number",
            "required": 0,
            "options": null
          },
          {
            "name": "Equipment",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Seeing Conditions",
            "type": "choice",
            "required": 0,
            "options": {
              "options": [
                {"label": "Poor", "value": "poor"},
                {"label": "Fair", "value": "fair"},
                {"label": "Good", "value": "good"},
                {"label": "Excellent", "value": "excellent"}
              ]
            }
          },
          {
            "name": "Light Pollution",
            "type": "choice",
            "required": 0,
            "options": {
              "options": [
                {"label": "Bortle 1 - Excellent", "value": "bortle1"},
                {"label": "Bortle 2 - Truly Dark", "value": "bortle2"},
                {"label": "Bortle 3 - Rural Sky", "value": "bortle3"},
                {"label": "Bortle 4 - Rural/Suburban", "value": "bortle4"},
                {"label": "Bortle 5 - Suburban Sky", "value": "bortle5"},
                {"label": "Bortle 6 - Bright Suburban", "value": "bortle6"},
                {"label": "Bortle 7 - Suburban/Urban", "value": "bortle7"},
                {"label": "Bortle 8 - City Sky", "value": "bortle8"},
                {"label": "Bortle 9 - Inner City Sky", "value": "bortle9"}
              ]
            }
          },
          {
            "name": "Exposure Details",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Processing Software",
            "type": "text",
            "required": 0,
            "options": null
          }
        ]
      },
      "Foods": {
        "tiers": [
          "tried",
          "cooked",
          "want to try"
        ],
        "entry_term": "dish",
        "observation_term": "tasting",
        "default_fields": [
          {
            "name": "Cuisine",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Ingredients",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Restaurant",
            "type": "text",
            "required": 0,
            "options": null
          },
          {
            "name": "Rating",
            "type": "rating",
            "required": 0,
            "options": {
              "max": 5
            }
          }
        ]
      }
    }
  }
}